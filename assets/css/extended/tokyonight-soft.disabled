/* Tokyo Night Theme - Light & Dark Modes (Soft/Pastel) */

/* Import IBM Plex Mono font */
@import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&display=swap");

/* Tokyo Night Light (Default) - WHITE BACKGROUND - Softer colors */
:root {
  --bg: #ffffff;
  --bg-dark: #f8f9fa;
  --bg-highlight: #e9ecef;
  --fg: #1a1b26;
  --fg-dark: #343b58;
  --fg-gutter: #565f89;

  /* Softer, more pastel light mode colors */
  --blue: #6b8bb3;
  --cyan: #5d8c9e;
  --green: #6b8072;
  --magenta: #9d7bc4;
  --orange: #a8825e;
  --purple: #7d6b9d;
  --red: #b55d6f;
  --yellow: #a89374;

  --comment: #6c7086;
  --border: #dce0e8;

  /* PaperMod Variables */
  --theme: var(--bg);
  --entry: var(--bg-dark);
  --primary: var(--fg);
  --secondary: var(--fg-dark);
  --tertiary: var(--bg-highlight);
  --content: var(--fg);
  --hljs-bg: var(--bg-highlight);
  --code-bg: var(--bg-highlight);
  --border: var(--border);

  --code-bg: var(--bg);
  --fg: none;
  --code-block-bg: none;
}

/* Tokyo Night Dark - DARK BACKGROUND - Softer/Pastel colors */
:root[data-theme="dark"] {
  --bg: #1a1b26;
  --bg-dark: #16161e;
  --bg-highlight: #292e42;
  --fg: #c0caf5;
  --fg-dark: #a9b1d6;
  --fg-gutter: #3b4261;

  /* Desaturated pastel colors - gentler than original */
  --blue: #8ba4d4;
  --cyan: #89c7d6;
  --green: #a8c896;
  --magenta: #b8a5d8;
  --orange: #d4a675;
  --purple: #a88dc4;
  --red: #d48897;
  --yellow: #d4b687;

  --comment: #565f89;
  --border: #292e42;

  /* PaperMod Variables */
  --theme: var(--bg);
  --entry: var(--bg-dark);
  --primary: var(--fg);
  --secondary: var(--fg-dark);
  --tertiary: var(--bg-highlight);
  --content: var(--fg);
  --hljs-bg: var(--bg-highlight);
  --code-bg: var(--bg-highlight);
  --border: var(--border);
}

/* Force monospace everywhere */
body {
  font-family: "IBM Plex Mono", "Fira Code", "Consolas", monospace !important;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: "IBM Plex Mono", monospace !important;
  font-weight: 700;
}

pre,
code {
  font-family: "IBM Plex Mono", monospace !important;
}

/* Colored Headings */
h1,
.post-title {
  color: var(--blue) !important;
}

h2,
.entry-header h2 {
  color: var(--purple) !important;
}

h3 {
  color: var(--cyan) !important;
}

h4 {
  color: var(--green) !important;
}

h5 {
  color: var(--yellow) !important;
}

h6 {
  color: var(--magenta) !important;
}

/* Links */
a {
  color: var(--blue);
  text-decoration: none;
}

a:hover {
  color: var(--cyan);
  text-decoration: underline;
}

/* Code blocks */
code {
  background-color: var(--bg-highlight);
  color: var(--orange);
}

pre {
  border-left: 3px solid var(--cyan);
}

:not(pre) > code {
  background-color: var(--bg-highlight);
  color: var(--orange);
  padding: 0.2em 0.4em;
  border-radius: 3px;
}

/* Post entries */
.post-entry {
  border-left: 3px solid var(--blue);
  background-color: var(--bg-dark);
  border: 1px solid var(--border);
}

.post-entry:hover {
  border-left-color: var(--cyan);
  transform: translateX(2px);
  transition: all 0.2s ease;
}

/* Blockquotes */
blockquote {
  border-left: 3px solid var(--yellow) !important;
  background-color: var(--bg-highlight) !important;
  color: var(--fg-dark) !important;
  padding: 1rem 1.5rem;
  margin: 1.5rem 0;
}

/* Buttons */
.button,
button {
  background-color: var(--bg-highlight);
  border: 1px solid var(--border);
  color: var(--fg);
}

.button:hover,
button:hover {
  background-color: var(--bg-dark);
  color: var(--blue);
}

/* Archive colors */
.archive-year {
  color: var(--blue) !important;
}

.archive-month {
  color: var(--purple) !important;
}

.archive-entry {
  border-left: 2px solid var(--border) !important;
}

.archive-entry:hover {
  border-left-color: var(--blue) !important;
}

/* Table of Contents */
.toc {
  background-color: var(--bg-highlight) !important;
  border: 1px solid var(--border) !important;
  border-left: 3px solid var(--purple) !important;
}

.toc a {
  color: var(--fg) !important;
}

.toc a:hover {
  color: var(--blue) !important;
}

/* Navigation */
.nav a {
  color: var(--fg-dark) !important;
}

.nav a:hover {
  color: var(--blue) !important;
}

/* Post metadata */
.post-meta {
  color: var(--comment) !important;
}

/* Social icons */
.social-icons a {
  color: var(--fg) !important;
}

.social-icons a:hover {
  color: var(--blue) !important;
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 12px;
  background-color: var(--bg);
}

::-webkit-scrollbar-thumb {
  background-color: var(--bg-highlight);
  border-radius: 6px;
}

::-webkit-scrollbar-thumb:hover {
  background-color: var(--blue);
}

/* Syntax Highlighting (Chroma) */
.chroma {
  background-color: var(--bg-highlight);
}
.chroma .k {
  color: var(--magenta);
  font-weight: bold;
} /* Keyword */
.chroma .kc {
  color: var(--orange);
} /* Keyword Constant */
.chroma .kd {
  color: var(--blue);
  font-weight: bold;
} /* Keyword Declaration */
.chroma .kn {
  color: var(--magenta);
} /* Keyword Namespace */
.chroma .kp {
  color: var(--magenta);
} /* Keyword Pseudo */
.chroma .kr {
  color: var(--purple);
} /* Keyword Reserved */
.chroma .kt {
  color: var(--cyan);
} /* Keyword Type */

.chroma .n {
  color: var(--fg);
} /* Name */
.chroma .na {
  color: var(--green);
} /* Name Attribute */
.chroma .nb {
  color: var(--cyan);
} /* Name Builtin */
.chroma .nc {
  color: var(--yellow);
} /* Name Class */
.chroma .nf {
  color: var(--blue);
} /* Name Function */
.chroma .nn {
  color: var(--yellow);
} /* Name Namespace */
.chroma .nv {
  color: var(--cyan);
} /* Name Variable */

.chroma .s {
  color: var(--green);
} /* String */
.chroma .sa {
  color: var(--green);
} /* String Affix */
.chroma .sb {
  color: var(--green);
} /* String Backtick */
.chroma .sc {
  color: var(--green);
} /* String Char */
.chroma .dl {
  color: var(--green);
} /* String Delimiter */
.chroma .sd {
  color: var(--comment);
  font-style: italic;
} /* String Doc */
.chroma .s2 {
  color: var(--green);
} /* String Double */
.chroma .se {
  color: var(--orange);
} /* String Escape */
.chroma .sh {
  color: var(--green);
} /* String Heredoc */
.chroma .si {
  color: var(--orange);
} /* String Interpol */
.chroma .sx {
  color: var(--green);
} /* String Other */
.chroma .sr {
  color: var(--cyan);
} /* String Regex */
.chroma .s1 {
  color: var(--green);
} /* String Single */
.chroma .ss {
  color: var(--cyan);
} /* String Symbol */

.chroma .m {
  color: var(--orange);
} /* Number */
.chroma .mb {
  color: var(--orange);
} /* Number Bin */
.chroma .mf {
  color: var(--orange);
} /* Number Float */
.chroma .mh {
  color: var(--orange);
} /* Number Hex */
.chroma .mi {
  color: var(--orange);
} /* Number Integer */
.chroma .il {
  color: var(--orange);
} /* Number Integer Long */
.chroma .mo {
  color: var(--orange);
} /* Number Oct */

.chroma .o {
  color: var(--purple);
} /* Operator */
.chroma .ow {
  color: var(--magenta);
  font-weight: bold;
} /* Operator Word */

.chroma .c {
  color: var(--comment);
  font-style: italic;
} /* Comment */
.chroma .ch {
  color: var(--comment);
  font-style: italic;
} /* Comment Hashbang */
.chroma .cm {
  color: var(--comment);
  font-style: italic;
} /* Comment Multiline */
.chroma .c1 {
  color: var(--comment);
  font-style: italic;
} /* Comment Single */
.chroma .cs {
  color: var(--comment);
  font-style: italic;
} /* Comment Special */
.chroma .cp {
  color: var(--magenta);
} /* Comment Preproc */
.chroma .cpf {
  color: var(--comment);
  font-style: italic;
} /* Comment Preproc File */

.chroma .p {
  color: var(--fg);
} /* Punctuation */

.chroma .err {
  color: var(--red);
} /* Error */
.chroma .g {
  color: var(--fg);
} /* Generic */

